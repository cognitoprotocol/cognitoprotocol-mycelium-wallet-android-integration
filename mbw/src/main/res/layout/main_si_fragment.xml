<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llSimplex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">

        <ImageView
	    android:id="@+id/ivSimplexLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/simplex"
            android:contentDescription="@string/si_simplex"
            android:layout_marginRight="@dimen/activity_vertical_margin"/>

        <LinearLayout
	    android:id="@+id/llSimplexBuy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvSimplexName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
		android:gravity="center"
                android:text="@string/si_buy_sell"
                android:textSize="18sp">
            </TextView>

            <TextView
                android:id="@+id/tvSimplexDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:gravity="center"
                android:text="@string/si_buy_sell_description"
                android:textSize="12sp">
            </TextView>
        </LinearLayout>
</LinearLayout>
