<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/ab_icon_size"
            android:layout_height="@dimen/ab_icon_size">
    <item>
        <shape
            android:shape="oval"
            android:thickness="8sp">
            <solid android:color="@color/semidarkgreen"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape
            android:innerRadius="0sp"
            android:shape="ring"
            android:thickness="8sp"
            android:useLevel="true">
            <solid android:color="@color/grey"/>
        </shape>
    </item>

</layer-list>